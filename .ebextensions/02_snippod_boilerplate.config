option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "southeast-fl-jews.settings.prod"
    PYTHONPATH: "/opt/python/current/app:$PYTHONPATH"
    PARAM1: "production"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: southeast-fl-jews/wsgi.py
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "staticfiles/"

container_commands:

  00_packages:
    command: "pip install -r requirements/common.txt && pip install -r requirements/prod.txt"

  01_migrate:
    command: "python manage.py migrate"
    leader_only: true

  02_createsu:
    command: "python manage.py createsu"
    leader_only: true

  03_collectstatic:
    command: "python manage.py collectstatic --noinput --clear"
